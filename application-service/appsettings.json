{
  "Logging": {
    "LogLevel": {
      "Default": "Debug",
      "System": "Information",
      "Microsoft": "Information"
    }
  },
  "AllowedHosts": "*",
  "ApplicationServicePostgresConnectionString": "Server=127.0.0.1;Port=5432;Database=bolton;User ID=bolton;Password=bolton;",
  "Serilog": {
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Error",
        "System": "Error",
        "CorrelationId": "Error"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "theme": "Serilog.Sinks.SystemConsole.Themes.AnsiConsoleTheme::Code, Serilog.Sinks.Console",
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{MachineName}] [{Level:u3}] [{SourceContext}]> {Message:j}{NewLine}{Properties:j}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "Path": "logs/applicationLog.txt",
          "OutputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss.fff}] [{MachineName}] [{Level:u3}] [{SourceContext}]> {Message:lj} {NewLine}{Exception}",
          "RollOnFileSizeLimit": "true",
          "FileSizeLimitBytes": "10485760",
          "RetainedFileCountLimit": "10"
        }
      }
    ]
  }
}
